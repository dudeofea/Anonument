<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DE2F3E"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/debug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="ANONUMENT"
        android:textColor="#EE959D"
        android:textSize="40sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/phonetics"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:ems="10"
        android:gravity="center"
        android:text="(ə'nänyəmənt)"
        android:textColor="#E6606B"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:textColor="#EE959D"
        android:text="1. A place or landmark with a meaning unknown to most" />

    <Button
        android:id="@+id/postButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:height="60dp"
        android:onClick="create_anonument"
        android:padding="0dp"
        android:text="CREATE"
        android:layout_above="@+id/background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:height="60dp"
        android:onClick="find_nearby"
        android:padding="0dp"
        android:text="FIND"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
